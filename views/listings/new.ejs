<% layout("./layouts/boilerplate")%> 
<body>
    <h3>Create New Listing</h3>
    <form method="POST" action="/listings">
        <div>
            <label for="title" class="form-label">Title</label>
        <input type="text" name="title" placeholder="enter title" class="form-control">
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
        <textarea name="description" placeholder="enter description" class="form-control"></textarea>
        </div>
        <div> <label for="image" class="form-label" >Image Url</label>
        <input name="image" class="form-control" type="text" placeholder="Enter Image Url/Link">
        </div>
        <div>
                <label for="price class="form-label">Price</label>
                <input type="number" name="price" placeholder="enter price"class="form-control" >
                
        </div>
        <div>

            <label for="location" class="form-label">Location</label>
            <input type="text" name="location" placeholder="enter location" class="form-control">
        </div>
        <div>
            
            <label for="country" class="form-label">Country</label>
            <input type="text" name="country" placeholder="enter country" class="form-control">
        </div>
        <br>
        <br>

        <button class="btn btn-dark">Submit</button>
    </form>
</body>
